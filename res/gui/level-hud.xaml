<StackPanel xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      VerticalAlignment="Bottom"
      HorizontalAlignment="Left"
      x:Class="LevelHud">

  <Canvas>
    <ToggleButton Canvas.Left="{Binding PosX}" Canvas.Bottom="{Binding PosY}" Content="Mon super bouton"/>
  </Canvas>

  <RadioButton Click="onSelectTower">Tower</RadioButton>
  <RadioButton Click="onSelectMirror">Mirror</RadioButton>
</StackPanel>